{
  "name": "ngx-dynamic-forms-demo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "concurrently -k -n lib,app -c blue,green \"ng build ngx-dynamic-forms --watch\" \"sleep 5 && ng serve\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:lib": "ng build ngx-dynamic-forms",
    "build:lib:watch": "ng build ngx-dynamic-forms --watch",
    "publish:lib": "cd dist/ngx-dynamic-forms && npm publish --access public",
    "publish:lib:dry": "cd dist/ngx-dynamic-forms && npm publish --dry-run",
    "build:validation": "cd packages/form-validation && npm run build",
    "build:validation-dotnet": "cd packages/form-validation-dotnet && dotnet build -c Release",
    "publish:validation": "npm run publish:validation-npm && npm run publish:validation-nuget",
    "publish:validation-npm": "cd packages/form-validation && npm run build && npm publish --access public",
    "publish:validation-nuget": "cd packages/form-validation-dotnet && dotnet pack -c Release && dotnet nuget push bin/Release/DynamicForms.FormValidation.*.nupkg --api-key $NUGET_API_KEY --source https://api.nuget.org/v3/index.json --skip-duplicate"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "marked": "^17.0.1",
    "pako": "^2.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@types/pako": "^2.0.4",
    "concurrently": "^9.2.1",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
