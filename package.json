{
  "name": "ngx-dynamic-forms-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "projects/*",
    "packages/ngx-dynamic-forms-validation"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve ngx-dynamic-forms-demo",
    "dev": "concurrently -k -n lib,app -c blue,green \"ng build ngx-dynamic-forms --watch\" \"sleep 5 && ng serve ngx-dynamic-forms-demo\"",
    "build": "ng build ngx-dynamic-forms-demo",
    "watch": "ng build ngx-dynamic-forms-demo --watch --configuration development",
    "test": "ng test ngx-dynamic-forms-demo",
    "build:lib": "ng build ngx-dynamic-forms",
    "build:lib:watch": "ng build ngx-dynamic-forms --watch",
    "build:validation": "npm run build -w @moe1399/ngx-dynamic-forms-validation",
    "build:validation-dotnet": "cd packages/form-validation-dotnet && dotnet build -c Release",
    "build:all": "npm run build:lib && npm run build:validation && npm run build:validation-dotnet",
    "publish": "./scripts/publish.sh patch",
    "publish:minor": "./scripts/publish.sh minor",
    "publish:major": "./scripts/publish.sh major",
    "publish:dry": "./scripts/publish.sh patch --dry-run",
    "publish:npm": "./scripts/publish.sh patch --npm-only",
    "publish:npm:dry": "./scripts/publish.sh patch --npm-only --dry-run",
    "changelog": "conventional-changelog -p angular -i projects/ngx-dynamic-forms/CHANGELOG.md -s --pkg projects/ngx-dynamic-forms/package.json",
    "changelog:all": "conventional-changelog -p angular -i projects/ngx-dynamic-forms/CHANGELOG.md -s -r 0 --pkg projects/ngx-dynamic-forms/package.json"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "packageManager": "npm@11.6.2",
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@types/pako": "^2.0.4",
    "concurrently": "^9.2.1",
    "conventional-changelog-cli": "^5.0.0",
    "jsdom": "^27.1.0",
    "ng-packagr": "^21.0.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "marked": "^17.0.1",
    "pako": "^2.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  }
}
